@using SolvexShop.Core.Application.ViewModels.Products;
@model SaveProductViewModel;
@{
    bool editMode = Model != null &&  Model.Id != Guid.Empty;
    ViewData["Title"] = "Guardar producto";
}

<div class="container-fluid">
    <div class="row">

        @if (ViewBag.HasError != null && ViewBag.HasError)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <p>@ViewBag.ErrorMessage</p>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }


        <div class="card g-5">
            <div class="card-header bg-light text-dark">
                <h4 class="fw-semi-bold">@(editMode ? $"Editando el producto: {Model.Name}" : "Agregando nuevo producto")</h4>
            </div>

            <div class="card-body bg-light text-dark">
                <form method="post" asp-controller="Product" asp-action=@(editMode ? "Edit" : "Add")>
                    <div class="row">
                        <input type="hidden" asp-for="Id" />

                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">Nombre</label>
                            <input asp-for="Name" type="text" placeholder="Iphone X " class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a asp-action="Index" asp-controller="Product" class="btn btn-warning">Volver</a>
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>